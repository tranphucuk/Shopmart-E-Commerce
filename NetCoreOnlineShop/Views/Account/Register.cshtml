@model RegisterViewModel
@using PaulMiami.AspNetCore.Mvc.Recaptcha
@{
    ViewData["Title"] = "Register";
    var returnUrl = ViewData["ReturnUrl"];
}

<!-- Breadcrumbs -->
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li class="home"> <a title="Go to Home Page" href="/">Home</a><span>&raquo;</span></li>
                    <li><strong>Register</strong></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->
<!-- Main Container -->
<section class="main-container col1-layout">
    <div class="main container">
        <div class="page-content">
            <div class="account-login">
                <div class="col-md-3 col-sm-2"></div>
                <div class="col-md-6 col-sm-8">
                    <div class="single-input p-bottom50 clearfix">
                        <form asp-route-returnUrl="@returnUrl" method="post" id="frm-register">
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="check-title">
                                        <h4>New Customer</h4>
                                    </div>
                                </div>
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <label>Username:</label>
                                        <div class="input-text">
                                            <input asp-for="@Model.UserName" class="form-control" name="UserName" />
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <label>Email:</label>
                                        <div class="input-text">
                                            <input asp-for="@Model.Email" class="form-control" name="Email" />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-12">
                                        <label>Fullname:</label>
                                        <div class="input-text">
                                            <input asp-for="@Model.FullName" class="form-control" name="FullName" />
                                        </div>
                                    </div>

                                    <div class="col-xs-12">
                                        <label>Address:</label>
                                        <div class="input-text">
                                            <input asp-for="@Model.Address" class="form-control" name="Address" />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <label>Phone number:</label>
                                        <div class="input-text">
                                            <input asp-for="@Model.PhoneNumber" class="form-control" name="PhoneNumber" />
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <label>Birthday:</label>
                                        <div class="input-text">
                                            <input type="date" asp-for="@Model.BirthDay" class="form-control" name="BirthDay" />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <label>Password:</label>
                                        <div class="input-text">
                                            <input type="password" asp-for="@Model.Password" class="form-control" name="Password" />
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <label>Confirm password:</label>
                                        <div class="input-text">
                                            <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" name="ConfirmPassword" />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="billing-checkbox">
                                            <input type="checkbox" value="forever" id="rememberme" name="rememberme">
                                            Sign up for our newsletter!
                                            <span class="pull-right">
                                                Or login <a href="/login.html"><strong><u>here</u></strong></a>
                                            </span>
                                        </div><br />
                                              <div>
                                                  <recaptcha type="RecaptchaType.Image" />
                                                  <span class="text-danger" id="recaptchaErrorMessage"></span>
                                              </div><br />
                                        <div class="submit-text">
                                            <button type="submit" class="button btn-register"><i class="fa fa-user"></i>&nbsp; <span>Register</span></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Main Container End -->
<!--Service section-->
@await Component.InvokeAsync("Service")
<!--End Service section-->
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/src/jquery.validate.unobtrusive.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <recaptcha-script validation-message-element-id="recaptchaErrorMessage" />
    <script src="~/client-side/js/controller/account/account.js"></script>
}